@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="year">Enter a Year (between 1900 and @(DateTime.Now.Year + 1)):</label>
        <input type="number" class="form-control" id="year" name="year" min="1900" max="@(DateTime.Now.Year + 1)" required>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-secondary">Clear</button>
</form>

@if (Model.ZodiacSign != null)
{
    <h2>Your Chinese Zodiac Sign:</h2>
    <p>@Model.ZodiacSign</p>
   <img src="~/images/@(Model.ZodiacSign.ToLower().Replace(" ", "_").Replace("'", ""))@(".png")" alt="@Model.ZodiacSign" />

}


